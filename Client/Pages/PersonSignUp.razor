@page "/signup"

<h3>PersonSignUp</h3>

<EditForm Model="pessoa" OnValidSubmit="SignUp" @onreset="HandleReset">
    <DataAnnotationsValidator/>
    <div class="form-group">
        <label>Title:</label>
        <InputSelect @bind-Value="pessoa.Title">
            <option> MR.</option>
            <option>MS.</option>
        </InputSelect>
        <br />
        <label>First Name:</label>
        <div>
            <InputText class="form-control" @bind-Value="@pessoa.FirstName" />
            <ValidationMessage For="@(() => pessoa.FirstName)" />
        </div>

        <br />
        <label>Last Name:</label>
        <div>
            <InputText class="form-control" @bind-Value="@pessoa.LastName" />
            <ValidationMessage For="@(() => pessoa.LastName)" />
        </div>

        <br />
        <label>Date of Birth:</label>
        <div>
            <InputDate class="form-control" @bind-Value="@pessoa.Birth" />
            <ValidationMessage For="@(() => pessoa.Birth)" />
        </div>

        <br />
        <label>Email:</label>
        <div>
            <InputText class="form-control" @bind-Value="@pessoa.Email" />
            <ValidationMessage For="@(() => pessoa.Email)" />
        </div>

        <br />
        <label>Password:</label>
        <div>
            <InputText class="form-control" @bind-Value="@pessoa.Password" />
            <ValidationMessage For="@(() => pessoa.Password)" />
        </div>

        <br />
        <label>Confirm Password:</label>
        <div>
            <InputText class="form-control" @bind-Value="@pessoa.ConfirmPassword" />
            <ValidationMessage For="@(() => pessoa.ConfirmPassword)" />
        </div>

        <br />
        <input type="checkbox" @bind-value="@pessoa.AcceptTerms"/>
        <ValidationMessage For="@(() => pessoa.AcceptTerms)" />
        <label class="text-danger">Terms of Condition</label>

    </div>
    <button class="btn btn-info" type="submit">Register</button>
    <button class="btn btn-danger" type="submit">Cancel</button>

</EditForm>

@code {

    Person pessoa = new Person();
    private void SignUp()
    {
        Console.WriteLine(pessoa.FirstName);
        Console.WriteLine(pessoa.LastName);
        Console.WriteLine(pessoa.Email);
        Console.WriteLine(pessoa.Birth);
        Console.WriteLine(pessoa.Password);
        Console.WriteLine(pessoa.ConfirmPassword);
    }

    private void HandleReset()
    {

    }
}
